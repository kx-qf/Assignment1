<%- include ../partials/header.ejs %> 
<%- include ../partials/main_nav.ejs %> 

<main>
    <div class="row align-items-ms-stretch">
    <div class="col-md-6 container">
      <div class="row">
          <div class="col-md-offset-3 col-md-6">
              <h1><%= title %> </h1>
              <% if(typeof displayName == 'string' && displayName) { %> 
              <a href="/contacts-list/add" class="btn btn-primary" role="button"><i class="fas fa-plus-circle"></i> Add a Contact</a>
              <% } %> 
              <br>
              <table class="table table-bordered table-striped table-hover">
                  <!--Header Row-->
                  <tr>
                      <th class="text-center">Contact Name</th>
                      <th class="text-center">Contact Number</th>
                      <th class="text-center">E-mail Address</th>
                      <% if(typeof displayName == 'string' && displayName) { %> 
                      <th class="text-center"></th>
                      <th class="text-center"></th>
                      <% } %> 
                  </tr>
                  <!--Repeatable Teamplate Row-->
                  <% for(let count = 0; count < ContactList.length; count++) {%> 
                        <tr>
                            <td class="text-center"><%= ContactList[count].contactsName %> </td>
                            <td class="text-center"><%= ContactList[count].contactsNumber %> </td>
                            <td class="text-center"><%= ContactList[count].EmailAddress %> </td>
                            <% if(typeof displayName == 'string' && displayName) { %> 
                            <td class="text-center">
                                <a href="/contacts-list/edit/<%= ContactList[count]._id %> " class="btn btn-primary"><i class="fas fa-pencil alt"></i>Edit</a>
                            </td>
                            <td class="text-center">
                                <a href="/contacts-list/delete/<%= ContactList[count]._id %> " class="btn btn-danger"><i class="fas fa-trash-lat"></i>Delete</a>
                            </td>
                            <% } %> 
                        </tr>
                    <% } %> 
              </table>
          </div>
      </div>
    </div>
  </div>
</main>

<%- include ../partials/bottom_nav.ejs %> 
<%- include ../partials/footer.ejs %> 
